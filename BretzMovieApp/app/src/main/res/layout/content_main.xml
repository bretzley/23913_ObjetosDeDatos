<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.bretz.bretzmovieapp.MainActivity"
    tools:showIn="@layout/activity_main">

    <EditText
        android:id="@+id/txtName"
        android:layout_width="255dp"
        android:layout_height="40dp"
        android:layout_marginTop="36dp"
        android:text="Type Movie Name"
        android:ems="10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="65dp" />

    <EditText
        android:id="@+id/txtDuration"
        android:layout_width="255dp"
        android:layout_height="40dp"
        android:layout_marginTop="7dp"
        android:ems="10"
        android:text="Movie Duration"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtName"
        android:layout_marginLeft="65dp" />

    <EditText
        android:id="@+id/txtDirector"
        android:layout_width="255dp"
        android:layout_height="40dp"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:text="Movie Director"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDuration"
        android:layout_marginLeft="65dp" />

    <EditText
        android:id="@+id/txtGenre"
        android:layout_width="255dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:text="Genre"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDirector"
        android:layout_marginLeft="65dp" />

    <EditText
        android:id="@+id/txtYear"
        android:layout_width="255dp"
        android:layout_height="40dp"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:text="Year"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtGenre"
        android:layout_marginLeft="65dp" />

    <Button
        android:id="@+id/btnListMovie"
        android:layout_width="362dp"
        android:layout_height="72dp"
        android:text="@string/btn_movie"
        tools:layout_editor_absoluteX="11dp"
        android:layout_marginTop="309dp"
        app:layout_constraintTop_toBottomOf="@+id/txtName" />
</android.support.constraint.ConstraintLayout>
