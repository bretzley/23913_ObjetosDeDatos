<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bretz.a23013_gonzalez_examen02.MainActivity">

    <TextView
        android:id="@+id/txtViewMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Board"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="398dp"
        android:layout_above="@+id/btnSync"
        android:layout_alignEnd="@+id/btnSync"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnGet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:text="get boards"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="445dp" />

    <Button
        android:id="@+id/btnSync"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnGet"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:text="SYNC boards" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Board Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edtAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/edtName"
        android:ems="10"
        android:hint="Author's Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edtSnake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edtAuthor"
        android:layout_below="@+id/edtAuthor"
        android:ems="10"
        android:hint='Insert snakes values "{}, {}..."'
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edtLadder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edtSnake"
        android:layout_below="@+id/edtSnake"
        android:ems="10"
        android:hint='Insert ladder values "{}, {}..."'
        android:inputType="textPersonName" />

</RelativeLayout>
